    <script>
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            } else {
                return label;
            }
        };

        const wrapLabel = (label, maxWidth = 16) => {
            if (label.length <= maxWidth) {
                return label;
            }
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + ' ' + word).trim().length > maxWidth) {
                    lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine = (currentLine + ' ' + word).trim();
                }
            });
            if (currentLine) {
                lines.push(currentLine.trim());
            }
            return lines;
        };

        const agloobPalette = {
            blue: '#0da7e0',
            darkGray: '#383838',
            green: '#3aaa35',
            yellow: '#f9b233',
            orange: '#f39200',
            lightGray: '#c6c6c6'
        };

        const competitorData = {
            labels: ['Marca Personal', 'Potencia Corporativa', ['Especialista', 'de Nicho'], ['Agloob', '(Posicionamiento', 'Propuesto)']].map(l => Array.isArray(l) ? l : wrapLabel(l)),
            datasets: [{
                label: 'Enfoque Estratégico',
                data: [70, 85, 90, 95],
                backgroundColor: [agloobPalette.orange, agloobPalette.lightGray, agloobPalette.yellow, agloobPalette.blue],
                borderColor: '#ffffff',
                borderWidth: 2
            }]
        };
        new Chart(document.getElementById('competitorChart'), {
            type: 'bar',
            data: competitorData,
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    title: { display: true, text: 'Posicionamiento Estratégico en el Mercado', font: { size: 16 } },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        title: { display: true, text: 'Nivel de Sofisticación y Especialización' }
                    }
                }
            }
        });

        const personaPainPointsData = {
            labels: [['Complejidad y', 'Falta de Tiempo'], ['Inversión', 'Publicitaria', 'Desperdiciada'], ['Miedo al', 'Estancamiento', 'Tecnológico'], ['Déficit de', 'Confianza en', 'Agencias'], ['Presión por', 'Resultados', '(ROI)']],
            datasets: [{
                label: 'Intensidad del Punto de Dolor',
                data: [9, 8, 7, 9, 10],
                fill: true,
                backgroundColor: 'rgba(13, 167, 224, 0.2)',
                borderColor: agloobPalette.blue,
                pointBackgroundColor: agloobPalette.blue,
                pointBorderColor: '#fff',
                pointHoverBackgroundColor: '#fff',
                pointHoverBorderColor: agloobPalette.blue
            }]
        };
        new Chart(document.getElementById('personaPainPointsChart'), {
            type: 'radar',
            data: personaPainPointsData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    title: { display: true, text: 'Principales Desafíos de "Elena"', font: { size: 16 } },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                },
                scales: {
                    r: {
                        angleLines: { color: agloobPalette.lightGray },
                        grid: { color: agloobPalette.lightGray },
                        pointLabels: { font: { size: 12 } },
                        suggestedMin: 0,
                        suggestedMax: 10
                    }
                }
            }
        });

        const contentPillarsData = {
            labels: ['Inteligencia de Amazon', 'Rendimiento Demostrado', 'Desmitificación Estratégica', 'El Elemento Humano'],
            datasets: [{
                label: 'Distribución de Contenido',
                data: [40, 30, 20, 10],
                backgroundColor: [agloobPalette.blue, agloobPalette.green, agloobPalette.yellow, agloobPalette.orange],
                hoverOffset: 4
            }]
        };
        new Chart(document.getElementById('contentPillarsChart'), {
            type: 'doughnut',
            data: contentPillarsData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    title: { display: true, text: 'Mix de Pilares de Contenido', font: { size: 16 } },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                }
            }
        });
    </script>
